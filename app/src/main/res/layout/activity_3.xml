<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.visionproject.android.vision_progect_23.MainActivity"
    android:background="@color/White"
    >


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/relativelayoutmiddle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/camera_image"
                android:layout_marginBottom="115sp"
                />

            <Button
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:background="@drawable/button_click"
                android:textColor="@drawable/button_colo"
                android:text="@string/title_click"
                android:id="@+id/click_button"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp" />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/relativelayoutbottom">

            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/toolbar_bottom"
                android:id="@+id/navigation_bar"
                app:menu="@menu/navigation">

            </android.support.design.widget.BottomNavigationView>

        </RelativeLayout>

    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>


